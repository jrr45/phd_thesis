  langid = {english},
  keywords = {device,DFT,flake,Heterostructure,HfO2,InSe,Memristor,mobility,PMMA,Raman,Raman peaks,SEM,TEM,XRD},
  annotation = {ZSCC: 0000000[s0]}
}

