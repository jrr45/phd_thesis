@book{moiz2016space,
  title = {Space {{Charge}}\textendash{{Limited Current Model}} for {{Polymers}}},
  author = {Moiz, Syed A. and Khan, Iqbal A. and Younis, Waheed A. and S.
Karimov, Khasan},
  year = {2016},
